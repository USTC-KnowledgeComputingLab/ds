{
    "name": "tsds",
    "scripts": {
        "emcc": "emcc tsds/ds.cc src/*.cc -Iinclude -lembind -o tsds/ds.mjs --emit-tsd ds.d.mts -gsource-map=inline -O3 -ffast-math -flto -s ALLOW_MEMORY_GROWTH=1",
        "rollup": "rollup --config rollup.config.mjs",
        "build": "run-s emcc rollup",
        "test": "cross-env NODE_OPTIONS='$NODE_OPTIONS --experimental-vm-modules' jest --config=jest.config.mjs",
        "all": "run-s build test"
    },
    "devDependencies": {
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.4",
        "@types/jest": "^30.0.0",
        "@web/rollup-plugin-copy": "^0.5.1",
        "cross-env": "^7.0.3",
        "ejs": "^3.1.10",
        "jest": "^30.0.5",
        "npm-run-all": "^4.1.5",
        "rollup": "^4.45.1",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "tslib": "^2.8.1",
        "typescript": "^5.8.3"
    }
}
