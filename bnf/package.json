{
    "name": "atsds-bnf",
    "version": "0.1.0",
    "description": "BNF parser and unparsers for DS - conversion between lisp-like and traditional syntax",
    "author": "Hao Zhang <hzhangxyz@outlook.com>",
    "license": "AGPL-3.0-or-later",
    "type": "module",
    "exports": {
        ".": "./dist/index.js"
    },
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*",
        "grammars/**/*.g4"
    ],
    "scripts": {
        "ds": "antlr4 -Dlanguage=JavaScript grammars/Ds.g4 -visitor -no-listener -o src/generated",
        "dsp": "antlr4 -Dlanguage=JavaScript grammars/Dsp.g4 -visitor -no-listener -o src/generated",
        "prepare": "npm-run-all ds dsp",
        "build": "npm run prepare && tsc",
        "test": "node --test tests/*.test.js",
        "clean": "rm -rf dist src/generated"
    },
    "dependencies": {
        "antlr4": "^4.13.2"
    },
    "devDependencies": {
        "@types/node": "^20.17.9",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.9.3"
    }
}
